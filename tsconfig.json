{
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "lib": ["esnext"],
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "pretty": true,
        "removeComments": true,
        "sourceMap": false,
        "declaration": false,
        "importsNotUsedAsValues": "error",
        "importHelpers": true
    },
    "files": ["index.ts", "react.ts", "node.ts", "next.ts"]
}
