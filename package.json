{
    "name": "eslint-config-facile",
    "version": "1.0.0-rc.2",
    "description": "facile.it ESLint extensible configuration",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/facile-it/eslint-config-facile.git"
    },
    "author": "Iacopo <siuvdlec@gmail.com>",
    "license": "MIT",
    "files": [
        "/dist"
    ],
    "type": "module",
    "module": "./dist/index.mjs",
    "exports": {
        "./package.json": "./package.json",
        "./prettierrc.json": "./dist/prettierrc.json",
        ".": {
            "types": "./dist/index.d.mts",
            "default": "./dist/index.mjs"
        },
        "./*": {
            "types": "./dist/*.d.mts",
            "default": "./dist/*.mjs"
        }
    },
    "types": "./dist/types/index.d.mts",
    "scripts": {
        "tsc": "tsc",
        "prebuild": "rm -rf dist",
        "build": "tsc -p tsconfig.build.json && cp .prettierrc.json ./dist/prettierrc.json",
        "pretest": "npm run build",
        "test": "eslint ./test/. -c ./test/_config.mjs --ext .ts",
        "prepublishOnly": "npm run build"
    },
    "peerDependencies": {
        "eslint": "^9.0.0",
        "prettier": "^3.0.3",
        "typescript": "^4.0 || ^5.0"
    },
    "dependencies": {
        "@eslint/compat": "^1.2.7",
        "@eslint/eslintrc": "^3.3.0",
        "@eslint/js": "^9.21.0",
        "@smarttools/eslint-plugin-rxjs": "^1.0.18",
        "@typescript-eslint/parser": "^8.25.0",
        "eslint-config-next": "^15.2.0",
        "eslint-config-prettier": "^10.0.2",
        "eslint-import-resolver-typescript": "^4.4.3",
        "eslint-plugin-fp-ts": "^0.4.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-n": "^17.20.0",
        "eslint-plugin-prettier": "^5.0.1",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^5.2.0",
        "globals": "^16.0.0",
        "typescript-eslint": "^8.26.0"
    },
    "devDependencies": {
        "@facile-it/tsconfig": "^0.2.0",
        "@types/node": "^20.8.8",
        "eslint": "^9.0.0",
        "prettier": "^3.0.3",
        "typescript": "^5.2.2"
    },
    "tags": [
        "eslint",
        "prettier",
        "configuration"
    ],
    "keywords": [
        "typescript",
        "react",
        "eslint",
        "eslintconfig",
        "prettier",
        "extensible",
        "configuration"
    ],
    "packageManager": "npm@10.9.0"
}